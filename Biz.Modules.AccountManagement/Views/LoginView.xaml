<views:FormFactorAwareUserControl
    x:Class="Biz.Modules.AccountManagement.Views.LoginView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:infrastructure="clr-namespace:Biz.Shell.Infrastructure;assembly=Biz.Shell"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Biz.Modules.AccountManagement.ViewModels"
    xmlns:views="clr-namespace:Biz.Shell.Views;assembly=Biz.Shell"
    xmlns:views1="clr-namespace:Biz.Modules.AccountManagement.Views"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:CompileBindings="True"
    x:DataType="viewModels:LoginViewModel"
    x:TypeArguments="viewModels:LoginViewModel"
    mc:Ignorable="d">

    <Grid RowDefinitions="*,Auto">
        <views1:SocialLoginsView Margin="0,50,0,0" DataContext="{Binding SocialLogins}" />

        <!--  Footer  -->
        <TextBlock
            Grid.Row="1"
            HorizontalAlignment="Center"
            Classes="Footer"
            Text="By continuing, you agree to our Terms of Service and Privacy Policy" />

        <views:ProgressBorder Grid.Row="0" />
    </Grid>

</views:FormFactorAwareUserControl>
