<views:FormFactorAwareUserControl
    x:Class="Biz.Modules.AccountManagement.Views.LoginView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="clr-namespace:Biz.Core;assembly=Biz.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:infrastructure="clr-namespace:Biz.Shell.Infrastructure;assembly=Biz.Shell"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Biz.Core.Models;assembly=Biz.Core"
    xmlns:viewModels="clr-namespace:Biz.Modules.AccountManagement.ViewModels"
    xmlns:views="clr-namespace:Biz.Shell.Views;assembly=Biz.Shell"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:CompileBindings="True"
    x:DataType="viewModels:LoginViewModel"
    x:TypeArguments="viewModels:LoginViewModel"
    mc:Ignorable="d">

    <Grid RowDefinitions="*,Auto">
        <StackPanel
            Margin="0,20,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Spacing="15">

            <StackPanel Spacing="5">
                <TextBox Text="{Binding Email}" Watermark="Enter Email" />
                <TextBox
                    PasswordChar="{x:Static core:AppConstants.PasswordChar}"
                    Text="{Binding Password}"
                    Watermark="Enter Password" />
                <HyperlinkButton HorizontalAlignment="Center" NavigateUri="{Binding RegisterCommand}">
                    Register New User
                </HyperlinkButton>
                <HyperlinkButton HorizontalAlignment="Center" NavigateUri="{Binding ForgotPasswordCommand}">
                    Need help signing in?
                </HyperlinkButton>
            </StackPanel>

            <TextBlock
                Margin="0,5,0,5"
                HorizontalAlignment="Center"
                Text="-or-" />

            <!--  Google Login Button  -->
            <Button
                Classes="Large"
                Command="{CompiledBinding LoginCommand}"
                CommandParameter="{x:Static models:LoginProvider.Google}"
                IsEnabled="{CompiledBinding IsNotBusy}">
                <StackPanel Orientation="Horizontal">
                    <PathIcon Data="{StaticResource {x:Static infrastructure:ResourceNames.Google}}" />
                    <TextBlock Margin="7,0,0,0" Text="Continue with Google" />
                </StackPanel>
            </Button>

            <!--  Microsoft Login Button  -->
            <Button
                Classes="Large"
                Command="{CompiledBinding LoginCommand}"
                CommandParameter="{x:Static models:LoginProvider.Microsoft}"
                IsEnabled="{CompiledBinding IsNotBusy}">
                <StackPanel Orientation="Horizontal">
                    <PathIcon Data="{StaticResource {x:Static infrastructure:ResourceNames.Microsoft}}" />
                    <TextBlock Margin="7,0,0,0" Text="Continue with Microsoft" />
                </StackPanel>
            </Button>

            <!--  Facebook Login Button  -->
            <Button
                Classes="Large"
                Command="{CompiledBinding LoginCommand}"
                CommandParameter="{x:Static models:LoginProvider.Facebook}"
                IsEnabled="{CompiledBinding IsNotBusy}">
                <StackPanel Orientation="Horizontal">
                    <PathIcon Data="{StaticResource {x:Static infrastructure:ResourceNames.Facebook}}" />
                    <TextBlock Margin="7,0,0,0" Text="Continue with Facebook" />
                </StackPanel>
            </Button>

            <!--  Apple Login Button  -->
            <Button
                Classes="Large"
                Command="{CompiledBinding LoginCommand}"
                CommandParameter="{x:Static models:LoginProvider.Apple}"
                IsEnabled="{CompiledBinding IsNotBusy}">
                <StackPanel Orientation="Horizontal">
                    <PathIcon Data="{StaticResource {x:Static infrastructure:ResourceNames.Apple}}" />
                    <TextBlock Margin="7,0,0,0" Text="Continue with Apple" />
                </StackPanel>
            </Button>
        </StackPanel>

        <!--  Footer  -->
        <TextBlock
            Grid.Row="1"
            HorizontalAlignment="Center"
            Classes="Footer"
            Text="By continuing, you agree to our Terms of Service and Privacy Policy" />

        <views:ProgressBorder
            Grid.Row="0"
            CancelCommand="{Binding CancelLoginCommand}"
            CancelContent="Cancel Login"
            IsBusy="{Binding IsBusy}" />
    </Grid>

</views:FormFactorAwareUserControl>
