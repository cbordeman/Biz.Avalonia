<views:FormFactorAwareUserControl
    x:Class="Biz.Modules.AccountManagement.Views.LoginView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:infrastructure="clr-namespace:Biz.Shell.Infrastructure;assembly=Biz.Shell"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Biz.Modules.AccountManagement.ViewModels"
    xmlns:views="clr-namespace:Biz.Shell.Views;assembly=Biz.Shell"
    xmlns:views1="clr-namespace:Biz.Modules.AccountManagement.Views"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:CompileBindings="True"
    x:DataType="viewModels:LoginViewModel"
    x:TypeArguments="viewModels:LoginViewModel"
    mc:Ignorable="d">

    <Grid RowDefinitions="*,Auto">
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Spacing="20">
            <TextBlock
                Margin="0,0,0,30"
                HorizontalAlignment="Center"
                Classes="Header"
                Text="Sign In to Get Started" />

            <Grid ColumnDefinitions="Auto,100,Auto" RowDefinitions="Auto,Auto,Auto,Auto">
                <TextBox Text="{Binding Email}" Watermark="Email" />
                <TextBox
                    PasswordChar="*"
                    RevealPassword="True"
                    Text="{Binding Password}" />
            </Grid>

            <!--  Google Login Button  -->
            <Button
                Classes="Large"
                Command="{CompiledBinding LoginWithGoogleCommand}"
                IsEnabled="{CompiledBinding IsNotBusy}">
                <StackPanel Orientation="Horizontal">
                    <PathIcon Data="{StaticResource {x:Static infrastructure:ResourceNames.Google}}" />
                    <TextBlock Margin="7,0,0,0" Text="Continue with Google" />
                </StackPanel>
            </Button>

            <!--  Microsoft Login Button  -->
            <Button
                Classes="Large"
                Command="{CompiledBinding LoginWithMicrosoftCommand}"
                IsEnabled="{CompiledBinding IsNotBusy}">
                <StackPanel Orientation="Horizontal">
                    <PathIcon Data="{StaticResource {x:Static infrastructure:ResourceNames.Microsoft}}" />
                    <TextBlock Margin="7,0,0,0" Text="Continue with Microsoft" />
                </StackPanel>
            </Button>

            <!--  Facebook Login Button  -->
            <Button
                Classes="Large"
                Command="{CompiledBinding LoginWithFacebookCommand}"
                IsEnabled="{CompiledBinding IsNotBusy}">
                <StackPanel Orientation="Horizontal">
                    <PathIcon Data="{StaticResource {x:Static infrastructure:ResourceNames.Facebook}}" />
                    <TextBlock Margin="7,0,0,0" Text="Continue with Facebook" />
                </StackPanel>
            </Button>

            <!--  Apple Login Button  -->
            <Button
                Classes="Large"
                Command="{CompiledBinding LoginWithAppleCommand}"
                IsEnabled="{CompiledBinding IsNotBusy}">
                <StackPanel Orientation="Horizontal">
                    <PathIcon Data="{StaticResource {x:Static infrastructure:ResourceNames.Apple}}" />
                    <TextBlock Margin="7,0,0,0" Text="Continue with Apple" />
                </StackPanel>
            </Button>
        </StackPanel>

        <!--  Footer  -->
        <TextBlock
            Grid.Row="1"
            HorizontalAlignment="Center"
            Classes="Footer"
            Text="By continuing, you agree to our Terms of Service and Privacy Policy" />

        <views:ProgressBorder
            Grid.Row="0"
            CancelCommand="{Binding CancelLoginCommand}"
            CancelContent="Cancel Login"
            IsBusy="{Binding IsBusy}" />
    </Grid>

</views:FormFactorAwareUserControl>
