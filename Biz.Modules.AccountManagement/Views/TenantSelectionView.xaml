<views:FormFactorAwareUserControl
    x:Class="Biz.Modules.AccountManagement.Views.TenantSelectionView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Biz.Models;assembly=Biz.Models"
    xmlns:viewModels="clr-namespace:Biz.Modules.AccountManagement.ViewModels"
    xmlns:views="clr-namespace:Biz.Shell.Views;assembly=Biz.Shell"
    x:Name="Root"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:CompileBindings="True"
    x:DataType="viewModels:TenantSelectionViewModel"
    x:TypeArguments="viewModels:TenantSelectionViewModel"
    mc:Ignorable="d">

    <Grid RowDefinitions="*,Auto">
        <StackPanel
            Margin="0,50,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top">
            <TextBlock
                Margin="0,0,0,50"
                HorizontalAlignment="Center"
                Classes="Header"
                Text="Select Organization" />

            <!--  Tenant Buttons  -->
            <ItemsControl
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                ItemsSource="{Binding AvailableTenants}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Spacing="20" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="{x:Type models:Tenant}">
                        <Button
                            Classes="Large"
                            Command="{Binding #Root.ViewModel.SelectCommand}"
                            CommandParameter="{Binding .}"
                            Content="{Binding Name}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <!--  Back button  -->
            <Button
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                Classes="Secondary"
                Command="{Binding CancelLoginCommand}"
                Content="Back" />

        </StackPanel>

        <!--  Footer  -->
        <TextBlock
            Grid.Row="1"
            HorizontalAlignment="Center"
            Classes="Footer"
            Text="By continuing, you agree to our Terms of Service and Privacy Policy" />

        <views:ProgressBorder Grid.Row="0" />
    </Grid>
</views:FormFactorAwareUserControl>