<Application
    x:Class="Biz.Shell.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:infrastructure="clr-namespace:Biz.Shell.Infrastructure"
    xmlns:shadui="clr-namespace:ShadUI;assembly=ShadUI"
    RequestedThemeVariant="Dark">

    <!-- <Application.DataTemplates> -->
    <!--     <infrastructure:ViewLocator /> -->
    <!-- </Application.DataTemplates> -->

    <Application.Styles>
        <shadui:ShadTheme />
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <!-- <ResourceDictionary.MergedDictionaries> -->
                <!--     <ResourceInclude Source="avares://ShadUI/Controls/Constants.axaml" /> -->
                <!--     <ResourceInclude Source="avares://ShadUI/Controls/Resources.axaml" /> -->
                <!-- </ResourceDictionary.MergedDictionaries> -->
                <ResourceDictionary x:Key="Dark">
                    <!-- <SolidColorBrush x:Key="WindowBackgroundBrush">Red</SolidColorBrush> -->
                </ResourceDictionary>
                <ResourceDictionary x:Key="Light">
                    <!-- <SolidColorBrush x:Key="WindowBackgroundBrush">Red</SolidColorBrush> -->
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>

            <!--  Fonts  -->
            <FontFamily x:Key="LucideIcon">avares://Biz.Shell/Assets/Fonts#lucide</FontFamily>
            <FontFamily x:Key="ShadUIIcon">avares://Biz.Shell/Assets/Fonts#shadui</FontFamily>
            <FontFamily x:Key="ManropeFont">avares://Biz.Shell/Assets/Fonts#Manrope</FontFamily>

            <ResourceDictionary.MergedDictionaries>
                <!--  Data Templates  -->
                <ResourceInclude Source="/DataTemplates/index.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <StyleInclude Source="/Styles/index.axaml" />
        <StyleInclude Source="avares://AvaloniaProgressRing/Styles/ProgressRing.xaml" />
    </Application.Styles>
</Application>