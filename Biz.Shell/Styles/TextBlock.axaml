<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style Selector="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource ManropeFont}" />
        <Setter Property="FontSize" Value="14" />
    </Style>
    <Style Selector="TextBlock.Footer">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="FontFamily" Value="{StaticResource ManropeFont}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextWrapping" Value="WrapWithOverflow" />
    </Style>
    <Style Selector="TextBlock.LucideIcon">
        <Setter Property="Height" Value="18" />
        <Setter Property="Width" Value="18" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="FontFamily" Value="{StaticResource LucideIcon}" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="ExtraLight" />
    </Style>
    <Style Selector="TextBlock.ShadUIIcon">
        <Setter Property="Height" Value="18" />
        <Setter Property="Width" Value="18" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="FontFamily" Value="{StaticResource ShadUiIcon}" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="ExtraLight" />
    </Style>
    <Style Selector="TextBlock.Header">
        <Setter Property="TextAlignment" Value="Left" />
        <Setter Property="FontFamily" Value="{StaticResource ManropeFont}" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="ExtraLight" />
        <Setter Property="Margin">
            <OnPlatform x:TypeArguments="Thickness">
                <OnPlatform.Windows>10,0,0,0</OnPlatform.Windows>
                <OnPlatform.macOS>10,0,0,0</OnPlatform.macOS>
                <OnPlatform.iOS>40,0,0,0</OnPlatform.iOS>
                <OnPlatform.Linux>40,0,0,0</OnPlatform.Linux>
                <OnPlatform.Android>40,0,0,0</OnPlatform.Android>
                <OnPlatform.Browser>40,0,0,0</OnPlatform.Browser>
            </OnPlatform>
        </Setter>
    </Style>

    <Style Selector="TextBlock.h1">
        <Setter Property="FontSize" Value="48" />
        <Setter Property="FontWeight" Value="ExtraBold" />
    </Style>
    <Style Selector="TextBlock.h2">
        <Setter Property="FontSize" Value="30" />
        <Setter Property="LineHeight" Value="36" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style Selector="TextBlock.h3">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="LineHeight" Value="32" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style Selector="TextBlock.h4">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="LineHeight" Value="28" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style Selector="TextBlock.p">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="LineHeight" Value="28" />
    </Style>

    <Style Selector="TextBlock.Lead">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="LineHeight" Value="28" />
        <Setter Property="Foreground" Value="{DynamicResource ForegroundLeadColor}" />
    </Style>

    <Style Selector="TextBlock.Large">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="LineHeight" Value="28" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style Selector="TextBlock.Small">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Medium" />
    </Style>

    <Style Selector="TextBlock.Caption">
        <Setter Property="FontSize" Value="12.8" />
        <Setter Property="FontWeight" Value="Medium" />
    </Style>

    <Style Selector="TextBlock.Muted">
        <Setter Property="Foreground" Value="{DynamicResource MutedColor}" />
    </Style>

    <Style Selector="TextBlock.Error">
        <Setter Property="Foreground" Value="{DynamicResource DestructiveColor}" />
    </Style>
</Styles>