<?xml version="1.0" encoding="UTF-8" ?>
<views:FormFactorAwareUserControl
    x:Class="Biz.Shell.Views.LoginView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:progRing="clr-namespace:AvaloniaProgressRing;assembly=AvaloniaProgressRing"
    xmlns:views="clr-namespace:Biz.Shell.Views"
    xmlns:vm="clr-namespace:Biz.Shell.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:CompileBindings="True"
    x:DataType="vm:LoginViewModel"
    mc:Ignorable="d">

    <Grid ColumnDefinitions="*" RowDefinitions="*,Auto,*">

        <!--  Welcome  -->
        <StackPanel
            Grid.Row="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Spacing="0">
            <Label
                HorizontalAlignment="Center"
                Content="Welcome to Biz"
                FontSize="32"
                FontWeight="Bold" />
            <Label
                HorizontalAlignment="Center"
                Content="Sign In to Get Started"
                FontSize="16"
                Opacity="0.8" />
        </StackPanel>

        <!--  Login Buttons  -->
        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Spacing="10">

            <!--  Google Login Button  -->
            <Button
                Classes="Large"
                Command="{Binding LoginWithGoogleCommand}"
                Content="Continue with Google"
                FontWeight="Bold"
                IsEnabled="{Binding IsNotBusy}" />

            <!--  Microsoft Login Button  -->
            <Button
                Classes="Large"
                Command="{Binding LoginWithMicrosoftCommand}"
                Content="Continue with Microsoft"
                FontWeight="Bold"
                IsEnabled="{Binding IsNotBusy}" />

            <!--  Facebook Login Button  -->
            <Button
                Classes="Large"
                Command="{Binding LoginWithFacebookCommand}"
                Content="Continue with Facebook"
                FontWeight="Bold"
                IsEnabled="{Binding IsNotBusy}" />

            <!--  Apple Login Button  -->
            <Button
                Classes="Large"
                Command="{Binding LoginWithAppleCommand}"
                Content="Continue with Apple"
                FontWeight="Bold"
                IsEnabled="{Binding IsNotBusy}" />
        </StackPanel>

        <!--  Footer  -->

        <Label
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Content="By continuing, you agree to our Terms of Service and Privacy Policy"
            FontSize="12"
            Opacity="0.7" />

        <Border
            Grid.Row="0"
            Grid.RowSpan="3"
            Background="{DynamicResource BusyAreaOverlayColor}"
            IsVisible="{Binding IsBusy}" />

        <StackPanel
            Grid.Row="0"
            Grid.RowSpan="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            IsVisible="{Binding IsBusy}">

            <!--  Loading Indicator  -->
            <progRing:ProgressRing
                Margin="0,0,0,20"
                HorizontalAlignment="Center"
                IsActive="{Binding IsBusy}"
                IsVisible="{Binding IsBusy}" />
            <Button
                HorizontalAlignment="Center"
                Classes="Action"
                Command="{Binding CancelLoginCommand}"
                Content="Cancel Login" />

        </StackPanel>
    </Grid>
</views:FormFactorAwareUserControl>
