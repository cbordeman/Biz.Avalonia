<UserControl
    x:Class="Biz.Shell.Views.ProgressBorder"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avaloniaProgressRing="clr-namespace:AvaloniaProgressRing;assembly=AvaloniaProgressRing"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <!--  Busy Indicator and Background  -->
    <Border Background="{DynamicResource BusyAreaOverlayColor}" IsVisible="{Binding IsBusy}">
        <StackPanel VerticalAlignment="Center">
            <avaloniaProgressRing:ProgressRing
                Width="50"
                Height="50"
                Margin="0,0,0,20"
                IsActive="{Binding IsBusy}"
                IsVisible="{Binding IsBusy}" />
            <Button
                HorizontalAlignment="Center"
                Classes="Secondary"
                Command="{Binding CancelLoginCommand}"
                Content="Cancel Login" />
        </StackPanel>
    </Border>
</UserControl>
